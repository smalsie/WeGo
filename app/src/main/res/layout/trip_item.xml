<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/trip_icon"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dip"
            android:contentDescription="TODO"
            android:src="@drawable/noimage" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/trip_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/trip_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Brooklyn"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/trip_location"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trip_name"
                android:text="New York, USA"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/trip_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trip_location"
                android:text="You were here from October 27th 2014 to October 30th 2014"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
