<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dip">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/home_main_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/nearby_place_icon"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="6dip"
                android:contentDescription="TODO"
                android:src="@drawable/brooklyn" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/nearby_place_icon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nearby_place_location"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Brooklyn"
                    android:textSize="25sp"
                    android:layout_marginTop="10dp"/>


                <TextView
                    android:id="@+id/nearby_place_distance_away"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nearby_place_location"
                    android:text="5 miles away"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"/>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nearby_place_distance_away">

                    <TextView
                        android:id="@+id/nearby_place_rating"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="5/5 Stars"
                        android:textSize="12sp"
                        android:textAlignment="textEnd"
                        android:gravity="end"/>

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>